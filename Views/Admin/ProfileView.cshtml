@model Project.Models.AdminLogin
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="profile section pt-4">
    <div class="container">
        <h2>My Profile</h2>
        <p class="text-muted">View your current details and click update to make changes.</p>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Message</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }

        <!-- Display Profile Info -->
        <table class="table table-bordered mt-4">
            <tr><th>Name</th><td>@Model.Name</td></tr>
            <tr><th>Email</th><td>@Model.Email</td></tr>
            <tr><th>Phone</th><td>@Model.Phone</td></tr>
            <tr><th>Password</th><td>@Model.Password</td></tr>
            <tr><th>Address</th><td>@Model.Address</td></tr>
        </table>

        <!-- Update Button -->
        <div class="text-center">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">Update Profile</button>
        </div>
    </div>
</section>

<!-- Modal for Updating Profile -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Admin" asp-action="ProfileUpdate" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Update Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body row gy-4 px-3">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="col-md-6">
                        <label>Name</label>
                        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
                    </div>

                    <div class="col-md-6">
                        <label>Email</label>
                        <input type="email" name="Email" class="form-control" value="@Model.Email" readonly />
                    </div>

                    <div class="col-md-6">
                        <label>Phone</label>
                        <input type="text" name="Phone" class="form-control" value="@Model.Phone" />
                    </div>

                    <div class="col-md-6">
                        <label>Password</label>
                        <input type="password" name="Password" class="form-control" value="@Model.Password" required />
                    </div>

                    <div class="col-12">
                        <label>Address</label>
                        <textarea name="Address" class="form-control" rows="3">@Model.Address</textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
