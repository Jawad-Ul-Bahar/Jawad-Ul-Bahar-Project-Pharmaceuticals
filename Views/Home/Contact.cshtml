@model Project.Models.Contact

<section id="contact" class="contact section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 align-items-stretch">
            <!-- Contact Form -->
            <div class="col-lg-6">
                <div class="contact-card p-4 shadow rounded h-100" data-aos="fade-up" data-aos-delay="200" style="background-color: #fff;">
                    <h3 class="text-center mb-3">Send Us a Message</h3>
                    <p class="text-center mb-4">Fill out the form below, and our team will get back to you promptly.</p>

                    <form asp-controller="Home" asp-action="Contactus" method="post">
                        <div class="row gy-4">
                            <div class="col-12">
                                <input asp-for="Name" class="form-control" placeholder="Your Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <input asp-for="Email" class="form-control" placeholder="Your Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <input asp-for="Subject" class="form-control" placeholder="Subject" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <textarea asp-for="Message" class="form-control" placeholder="Your Message" rows="6"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary px-5">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="col-lg-6">
                <div class="contact-info p-4 shadow rounded h-100" data-aos="fade-up" data-aos-delay="300" style="background-color: #fff;">
                    <h3 class="mb-3 mt-4 text-center">Contact Information</h3>
                    <p class="mb-4 mt-2">We're here to assist you. Reach out through any of the following channels.</p>

                    <div class="info-item d-flex mb-4" data-aos="fade-up" data-aos-delay="350">
                        <i class="bi bi-geo-alt fs-4 me-3 text-primary"></i>
                        <div>
                            <h5 class="mb-1 mt-2">Location:</h5>
                            <p class="mb-0 mt-2">123 Innovation Drive, Pharma City, CA 90210</p>
                        </div>
                    </div>

                    <div class="info-item d-flex mb-4 mt-4" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-telephone fs-4 me-3 text-primary"></i>
                        <div>
                            <h5 class="mb-1 mt-2">Call Us:</h5>
                            <p class="mb-0">+1 555 987 6543</p>
                        </div>
                    </div>

                    <div class="info-item d-flex mb-4 mt-4" data-aos="fade-up" data-aos-delay="450">
                        <i class="bi bi-envelope fs-4 me-3 text-primary"></i>
                        <div>
                            <h5 class="mb-1 mt-2">Email Us:</h5>
                            <p class="mb-0">info@pharma.com</p>
                        </div>
                    </div>

                    <div class="social-links mt-4 d-flex gap-3" data-aos="fade-up" data-aos-delay="500">
                        <a href="#" class="text-dark text-center"><i class="bi bi-twitter-x fs-4"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-linkedin fs-4"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
