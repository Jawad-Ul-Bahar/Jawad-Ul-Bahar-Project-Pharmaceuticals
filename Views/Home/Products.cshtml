@model List<Project.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="products section py-5">
    <div class="container">
        @foreach (var category in Model)
        {
            var catname = category.Name;
            var products = category.Products;

            <h2 class="text-primary mt-5">@catname</h2>
            <p class="text-muted mb-4">Products in @catname category</p>

            <div class="row gy-4">
                @foreach (var product in products)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card shadow-sm h-100">
                            <img src="@product.Image" class="card-img-top" style="height: 220px; object-fit: contain;" alt="@product.Name" />
                            <div class="card-body d-flex flex-column">
                                <h5>@product.Name</h5>
                                <p class="text-muted flex-grow-1">@product.Description</p>
                                <button class="btn btn-outline-primary mt-3" data-bs-toggle="modal" data-bs-target="#modal-@product.Id">
                                    View Product
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="modal-@product.Id" tabindex="-1" aria-labelledby="modalLabel-@product.Id" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalLabel-@product.Id">@product.Name</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body row">
                                    <div class="col-md-6 text-center">
                                        <img src="@product.Image" class="img-fluid" style="max-height: 300px;" alt="@product.Name" />
                                    </div>
                                    <div class="col-md-6">
                                        <p>@product.Description</p>
                                        <p><strong>Category:</strong> @catname</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
