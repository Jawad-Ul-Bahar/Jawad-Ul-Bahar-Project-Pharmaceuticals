                <h1 class="sitename"> InnovaMedix Pharmora </h1>
            </a>
            @{
                var Id = Context.Session.GetInt32("CandidateId");
            }

            <nav id="navmenu" class="navmenu" data-aos="fade-left" data-aos-delay="150">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" class="@(action == "Index" ? "active" : "")">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About" class="@(action == "About" ? "active" : "")">About-us</a></li>
                    <li><a asp-controller="Home" asp-action="Products" class="@(action == "Products" ? "active" : "")">Products</a></li>
                    <li><a asp-controller="Home" asp-action="Contact" class="@(action == "Contact" ? "active" : "")">Contact-us</a></li>
                    <li><a asp-controller="Home" asp-action="Quote" class="@(action == "Quote" ? "active" : "")">Quote-us</a></li>

                    @if (Id == null)
                    {
                        <li><a asp-controller="Home" asp-action="Login" class="@(action == "Login" ? "active" : "")">Login</a></li>
                    }
                    else
                    {
                        <li class="auth-link profile-link">
                            <a asp-controller="Home" asp-action="Profile" class="@(action == "Profile" ? "active" : "")">
                                <i class="bi bi-person-circle"></i> Profile
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Logout" class="btn-getstarted text-white logout-red">Logout</a>
                        </li>
                    }
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <a class="btn-getstarted" asp-controller="Home" asp-action="careers" class="@(action == "careers" ? "active" : "")">Career</a>
